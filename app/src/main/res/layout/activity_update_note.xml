<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".UpdateNoteActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back_24"
        app:titleTextColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="16dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/edit_note_heading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/be_vietnam_pro_medium"
            android:text="Editar Nota"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/edit_note_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edit_note_heading_tv"
            android:layout_alignBottom="@+id/edit_note_heading_tv"
            android:layout_alignParentEnd="true"
            android:src="@drawable/edit_note_24px"
            app:tint="@color/orange" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_til"
            style="@style/TextInputOuterFieldTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_note_heading_tv"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:hint="Titulo"
            app:boxStrokeColor="@color/custom_color_navigation"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title_tiet"
                style="@style/TextInputInnerFieldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/title_24"
                android:drawablePadding="5dp"
                android:drawableTint="@color/orange"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/content_til"
            style="@style/TextInputOuterFieldTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_til"
            android:layout_marginTop="6dp"
            android:hint="Escribe tu nota..."
            app:boxStrokeColor="@color/custom_color_navigation"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/content_tiet"
                style="@style/TextInputInnerFieldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="5dp"
                android:drawableTint="@color/orange"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:imeOptions="actionNext"
                android:minLines="3"
                android:maxLines="30" />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

</RelativeLayout>
